{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1>Posts list</h1>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-lg-8">

            <table class="table table-striped">

                <thead>
                <tr>
                    <th>Name</th>
                    <th>Tag(s)</th>
                    <th>Actions</th>
                </tr>
                </thead>

                <tbody>
                    {% for post in posts if posts is not empty %}
                        <tr>
                            <td><a href="{{ path('post_show', { 'id': post.id }) }}">{{ post.name }}</a></td>
                            <td>
                                {% for tag in post.tags %}
                                    <a href="{{ path('post_index') }}?tag={{ tag }}">{{ tag }}</a>
                                {% endfor %}
                            </td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('post_show', { 'id': post.id }) }}">show</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('post_edit', { 'id': post.id }) }}">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="tr-vide">No posts</td>
                        </tr>
                    {% endfor %}
                </tbody>

            </table>

        </div>

        <div class="col-lg-4">
            <ul class="list-group">
                <li class="list-group-item">
                    <a href="{{ path('post_new') }}">Create a new post</a>
                </li>
            </ul>
        </div>

    </div>

{% endblock %}
