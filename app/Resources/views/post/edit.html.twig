{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <h1>Post edit</h1>
        </div>
    </div>

    <div class="row">

        <div class="col-lg-8">
            {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
                <input class="btn btn-submit" type="submit" value="Edit" />
            {{ form_end(edit_form) }}
        </div>

        <div class="col-lg-4">
            <ul class="list-group" style="margin-top: 1.5em">
                <li class="list-group-item">
                    <a href="{{ path('post_index') }}">Back to the list</a>
                </li>
                <li class="list-group-item">
                    {{ form_start(delete_form) }}
                        <input class="btn btn-submit" type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>

    </div>

{% endblock %}
